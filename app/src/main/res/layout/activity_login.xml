<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- 앱 슬로건 -->
        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나를 위한 운동 정보"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

        <!-- 앱 이름 -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GYMPT"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center"/>

        <!-- 부제목 -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gym-Personal-Talk"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="32dp"
            android:gravity="center"/>

        <!-- 계정 생성 안내 -->
        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정을 만들어주세요"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvEmailGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="이메일을 입력하여 회원가입을 진행하세요"
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- 이메일 입력창 -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="email@domain.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/et_email_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Continue 버튼 -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- 구분선 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" or "
                android:textColor="#888888"
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>
        </LinearLayout>

        <!-- 구글 로그인 버튼 (실제 구글 버튼은 별도 구현 필요) -->
        <Button
            android:id="@+id/btn_google_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="구글 계정으로 로그인"
            android:textAllCaps="false"
            android:background="#F5F5F5"
            android:textColor="#222222"
            android:gravity="center_vertical"/>
        <!--            android:drawableLeft="@drawable/ic_google_logo"-->

    </LinearLayout>
</ScrollView>
